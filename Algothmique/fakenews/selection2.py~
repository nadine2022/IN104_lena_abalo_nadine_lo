import spacy
from apinews1 import nombre_articles
from apinews1 import base_articles


def selection_2(verbs, data1): # verbs =liste des verbes tokenisés de la phrase, data1= base d'articles de la sélection 1
    n=len(data1['totalResults'])
    nlp=spacy.load("en_core_web_sm")

    for i in range(0,n):
        #pour chaque article on veut relever les verbes à l'infinitif
        
        text=data1['articles'][i]['content'] #texte de l'article
        doc=nlp(text)
        L=[] #liste où on va mettre les verbes
        
        for token in doc :
            if (token.pos==VERB):
                L.append(token.lemma)
        print(L)


    return 0
        
    
        
        
